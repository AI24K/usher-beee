{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Ceramic",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"module": "esnext",
		"moduleResolution": "node",
		"types": ["node"],
		"declaration": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"files": ["./src/index.ts"],
	"exclude": ["node_modules"]
}

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Ceramic",
	"extends": "ts-node/node16/tsconfig.json",
	"compilerOptions": {
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@models/*": ["models/*"],
			"@tests/*": ["tests/*"]
		},
		"incremental": true
	},
	"exclude": ["node_modules"],
	"include": ["**/*.mts", "**/*.ts", "**/*.tsx"]
}

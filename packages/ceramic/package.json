{
	"name": "@usher/ceramic",
	"version": "0.0.1",
	"description": "Usher Ceramic Utility Package",
	"repository": "git@gitlab.com:usherlabs/core.git",
	"author": "Ryan Soury <ryan@usher.so>",
	"license": "UNLICENSED",
	"bin": {
		"uadmin": "./bin/uadmin"
	},
	"files": [
		"/dist"
	],
	"main": "./dist/index.js",
	"types": "index.d.ts",
	"private": true,
	"scripts": {
		"build": "npm-run-all -s clean compile cmd:build",
		"clean": "del dist build",
		"compile": "tsc --project ./tsconfig.build.json && resolve-tspaths",
		"cmd:build": "esbuild ./src/cmd.js --bundle --outdir=build --platform=node",
		"cmd:watch": "esbuild ./src/cmd.js --bundle --outdir=build --platform=node --watch",
		"ts": "tsc --noEmit"
	},
	"dependencies": {
		"@ceramicnetwork/http-client": "2.0.0",
		"@glazed/datamodel": "^0.3.0",
		"@glazed/devtools": "^0.2.0",
		"chalk": "^5.0.1",
		"commander": "^9.3.0",
		"dids": "^3.1.0",
		"dotenv": "^16.0.1",
		"key-did-provider-ed25519": "^2.0.0",
		"key-did-resolver": "^2.0.4",
		"uint8arrays": "^3.0.0"
	},
	"devDependencies": {
		"@types/node": "^17.0.40",
		"del-cli": "^4.0.1",
		"esbuild": "^0.14.42",
		"npm-run-all": "^4.1.5",
		"resolve-tspaths": "^0.6.0",
		"ts-node": "^10.8.0",
		"tsconfig-paths": "^4.0.0",
		"tslib": "^2.4.0",
		"typescript": "^4.7.3"
	}
}

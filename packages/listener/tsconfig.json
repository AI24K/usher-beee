{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Listener",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"typeRoots": ["./types", "./node_modules/@types"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["./node_modules"]
}

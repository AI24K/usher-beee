{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "UsherAdmin",
	"compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
		"declaration": true,
		"importHelpers": true,
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"target": "es2019",
		"paths": {
			"@/*": ["./src/*"],
			"@test/*": ["./test/*"]
		}
	},
	"exclude": ["node_modules", "build", "dist"],
	"include": ["src/**/*.ts"],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}

